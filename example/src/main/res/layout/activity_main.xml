<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/trigger_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trigger event" />

    <com.github.stkent.amplify.AmplifyView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:amplify_question_layout="@layout/amplify_view_question_layout_example"
        app:amplify_confirmation_layout="@layout/amplify_view_confirmation_layout_example" />

</LinearLayout>